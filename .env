# Database credentials
DB_USER=user
DB_PASSWORD=password

# Discord webhook for backup notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/changeme # put your own webhook

# Upload method: sftp, ftp, local, or both (for local + external)
UPLOAD_METHOD=both # Options: sftp, ftp, local, both

# Local backup path (used if method is local or both)
LOCAL_PATH=/backup/ # Path to backup locally if method is local or both

# SFTP configuration
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USER=root
SFTP_PASSWORD=example
SFTP_REMOTE_PATH=/ # Remote directory path on SFTP server

# FTP configuration
FTP_HOST=ftp.example.com
FTP_USER=root
FTP_PASSWORD=example
